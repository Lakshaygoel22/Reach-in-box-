# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
# Replace <username>, <password>, and <cluster> with your MongoDB Atlas credentials
# Example: mongodb+srv://<username>:<password>@<cluster>.mongodb.net/reachinbox
MONGODB_URI=mongodb://localhost:27017/reachinbox

# Elasticsearch Configuration
# For production, use authenticated endpoint with HTTPS
ELASTICSEARCH_NODE=http://localhost:9200

# OpenAI Configuration
# Get your API key from: https://platform.openai.com/account/api-keys
OPENAI_API_KEY=sk-your-openai-api-key

# Slack Integration (Optional)
# Get your bot token from: https://api.slack.com/apps
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_CHANNEL=#leads

# Webhook Configuration (Optional)
# Must use HTTPS in production
WEBHOOK_URL=https://your-webhook-url.com/endpoint

# Email Account Configuration
# Use environment-specific email accounts
# For Gmail, use App Passwords: https://support.google.com/accounts/answer/185833
# Format: JSON array of account objects
# Example structure (DO NOT use real credentials here):
EMAIL_ACCOUNTS=[
  {
    "email": "example@gmail.com",
    "password": "app-specific-password",
    "host": "imap.gmail.com",
    "port": 993
  }
]

# Security Settings
# Minimum 32 characters for session secret in production
SESSION_SECRET=change-me-in-production

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100  # requests per window

# MongoDB Security
MONGODB_USERNAME=admin
MONGODB_PASSWORD=change-in-production
MONGODB_AUTH_SOURCE=admin
MONGODB_SSL=true

# Elasticsearch Security
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=change-in-production
ELASTICSEARCH_SSL=true

# CORS Settings
CORS_ORIGIN=http://localhost:3000
CORS_METHODS=GET,POST
TRUSTED_PROXIES=127.0.0.1

# JWT Settings
JWT_SECRET=change-this-in-production
JWT_EXPIRES_IN=1h
JWT_COOKIE_EXPIRES_IN=1

# Security Headers
STRICT_TRANSPORT_SECURITY_MAX_AGE=31536000
CONTENT_SECURITY_POLICY="default-src 'self'"

